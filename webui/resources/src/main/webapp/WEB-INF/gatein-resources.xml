<?xml version="1.0" encoding="ISO-8859-1" ?>

<gatein-resources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_resources_1_2_1 http://www.gatein.org/xml/ns/gatein_resources_1_2_1"
	xmlns="http://www.gatein.org/xml/ns/gatein_resources_1_2_1">

	<portal-skin>
		<skin-name>Default</skin-name>
		<skin-module>DocumentSelector</skin-module>
		<css-path>/skin/DefaultSkin/commons/Stylesheet.css</css-path>
		<css-priority>5</css-priority>
	</portal-skin>

	<module>
		<name>commons-document</name>
		<as>doc</as>
		<script>
			<name>eXo.commons.DocumentSelector</name>
			<path>/javascript/eXo/commons/DocumentSelector.js</path>
		</script>
		<!-- UIDSUpload depends DocumentSelector -->
		<script>
			<name>eXo.commons.UIDSUpload</name>
			<path>/javascript/eXo/commons/UIDSUpload.js</path>
		</script>
		<depends>
			<module>jquery</module>	
			<as>jQuery</as>	
		</depends>
		<depends>
			<!-- need Browser.js -->
			<module>base</module>
			<as>gtnbase</as>
		</depends>
	</module>

	<module>
		<name>commons-editor</name>
		<as>ckeditor</as>
		<script>
			<name>eXo.commons.ExoEditor</name>
			<path>/ckeditor/exoeditor.js</path>
		</script>
		<script>
			<name>eXo.commons.ExoEditorConfig</name>
			<path>/ckeditor/eXoConfig.js</path>
		</script>
	</module>
	
	
<!-- image cropping -->	
    <portlet-skin>
    <application-name>webui-portlet-test</application-name>
    <portlet-name>imagecrop</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/skin/TestPortlet/DefaultSkin/UIImageCropping/jWindowCrop.css</css-path>
    <css-priority>1</css-priority>
  </portlet-skin>
  
  
	 <module>
	    <name>jWindowCropper</name>
	    <script>	       
	       <path>/javascript/eXo/social/webui/jWindowCrop.js</path>
	    </script>
	    <depends>
	      <module>jquery</module>
	      <as>$</as>
	    </depends>
	  </module>     
  
  
   
	 <module>
	    <name>commons-image-cropper</name>
	    <script>	       
	       <path>/javascript/eXo/social/webui/UIImageCropper.js</path>
	    </script>
	    <depends>
	      <module>jquery</module>
	      <as>$</as>
	    </depends>
	   	<depends>
	       <module>jWindowCropper</module>
	       <as>jWCropper</as>
	    </depends>
	  </module>   	
	
	

</gatein-resources>

